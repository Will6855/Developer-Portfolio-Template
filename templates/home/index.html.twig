{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
<div class="min-h-screen bg-base-100 relative">
    <!-- Background elements -->
    <div class="fixed inset-0 bg-gradient-to-br from-primary/5 via-base-100 to-secondary/5"></div>
    <div class="fixed inset-0 bg-[radial-gradient(circle_at_30%_50%,rgba(79,70,229,0.05)_0%,transparent_50%)]"></div>
    <div class="fixed inset-0 bg-[radial-gradient(circle_at_70%_80%,rgba(236,72,153,0.05)_0%,transparent_50%)]"></div>
    
    <!-- Grid pattern -->
    <div class="fixed inset-0 opacity-30">
        <div class="absolute inset-0" style="background-image: linear-gradient(rgba(255,255,255,0.05) 1px, transparent 1px), linear-gradient(90deg, rgba(255,255,255,0.05) 1px, transparent 1px); background-size: 30px 30px;"></div>
    </div>

    <div class="relative z-10 flex flex-col lg:flex-row">
        <!-- Left Sidebar -->
        <div class="w-full lg:w-2/5 p-6 lg:p-8 lg:pl-20 lg:fixed lg:h-screen overflow-y-auto flex items-center">
            <div class="w-full">
                <header>
                    <div class="mb-6 relative w-36 h-36 lg:w-48 lg:h-48 mx-auto lg:mx-0">
                        <svg xmlns="http://www.w3.org/2000/svg" version="1.1" viewBox="0 0 600 600" class="w-full h-full">
                            <clipPath id="blob-mask">
                                <path id="blob" d="M570,205C596,115,396,33,303,32C210,30,40,108,14,197C-13,287,51,568,144,569C237,570,543,294,570,205C596,115,396,33,303,32" />
                                <!-- <path id="blob">
                                    <animate
                                        attributeName="d"
                                        dur="10s"
                                        repeatCount="indefinite"
                                        calcMode="linear"
                                        values="M 570 205 C 596 115 396 33 303 32 C 210 30 40 108 14 197 C -13 287 51 568 144 569 C 237 570 543 294 570 205;
                                               M 589 201 C 590 105 386 -3 289 9 C 192 21 10 175 9 271 C 8 367 188 599 284 588 C 381 576 589 297 589 201;
                                               M 583 203 C 560 111 347 -12 257 11 C 166 35 16 253 39 345 C 62 437 304 585 394 562 C 485 538 606 294 583 203;
                                               M 564 267 C 596 173 386 22 297 16 C 208 10 64 135 32 229 C 0 322 15 573 104 579 C 193 586 531 361 564 267;
                                               M 570 205 C 596 115 396 33 303 32 C 210 30 40 108 14 197 C -13 287 51 568 144 569 C 237 570 543 294 570 205"
                                    />
                                </path> -->
                            </clipPath>
                            <image 
                                clip-path="url(#blob-mask)"
                                href="{{ asset('images/profile-image.webp') }}"
                                width="100%"
                                height="100%"
                                preserveAspectRatio="xMidYMid slice"
                                loading="lazy"
                                decoding="async"
                            />
                        </svg>
                    </div>
                    <div class="text-center lg:text-left">
                        <h1 class="text-3xl lg:text-4xl font-bold mb-2">Guillaume PIARD</h1>
                        <div class="flex flex-col gap-2">
                            <div class="flex items-center gap-4 justify-center lg:justify-start">
                                <h2 class="text-lg lg:text-xl text-gray-300">{{ 'sidebar.job_title'|trans }}</h2>
                                <div class="flex items-center gap-2 py-1 px-2.5 bg-success/10 text-success rounded-full">
                                    <span class="relative flex h-2 w-2">
                                        <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-success opacity-75"></span>
                                        <span class="relative inline-flex rounded-full h-2 w-2 bg-success"></span>
                                    </span>
                                    <span class="text-xs font-medium">{{ 'sidebar.open_to_job'|trans }}</span>
                                </div>
                            </div>
                            <div class="flex items-center gap-1 text-gray-400 justify-center lg:justify-start">
                                <i class="fa-solid fa-location-dot"></i>
                                <span>{{ 'sidebar.location'|trans }}</span>
                            </div>
                            <p class="text-gray-300 text-sm mt-1">{{ 'sidebar.tagline'|trans }}</p>
                        </div>
                    </div>

                    <!-- Resume Download and Social Links -->
                    <div class="mt-6 flex items-center gap-4 flex-col lg:flex-row">
                        <div class="group flex-1 w-full">
                            <a href="{{ asset('files/cv_guillaume_piard.pdf') }}" download class="relative flex items-center justify-center w-full px-4 py-2 bg-base-200 rounded-lg border border-base-content/10 shadow-sm transition-all duration-300 hover:shadow-md hover:scale-[1.02] overflow-hidden">
                                <div class="absolute inset-0 bg-gradient-to-r from-primary/80 to-secondary/80 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                                <span class="relative flex items-center gap-2 text-sm font-medium">
                                    <i class="fa-solid fa-file-arrow-down"></i>
                                    {{ 'sidebar.resume'|trans }}
                                </span>
                            </a>
                        </div>
                        <div class="flex gap-4 mt-4 lg:mt-0">
                            <a href="https://github.com/Will6855" target="_blank" rel="noopener noreferrer" class="text-gray-300 hover:text-base-content transition-colors hover:scale-110 transform duration-200">
                                <i class="fa-brands fa-github fa-xl"></i>
                            </a>
                            <a href="mailto:gpiard27@gmail.com" class="text-gray-300 hover:text-base-content transition-colors hover:scale-110 transform duration-200">
                                <i class="fa-solid fa-envelope fa-xl"></i>
                            </a>
                            <a href="https://linkedin.com/in/piard-guillaume" target="_blank" rel="noopener noreferrer" class="text-gray-300 hover:text-base-content transition-colors hover:scale-110 transform duration-200">
                                <i class="fa-brands fa-linkedin fa-xl"></i>
                            </a>
                        </div>
                    </div>

                    <div class="mt-6 space-y-3">
                        <div class="grid gap-3">
                            <div class="p-4 rounded-xl bg-gradient-to-br from-primary/5 to-base-300/50 backdrop-blur-sm border border-base-content/5">
                                <h2 class="text-base font-bold mb-1">{{ 'sidebar.open_to_job'|trans }}</h2>
                                <p class="text-base-content/70 mb-3 text-sm">{{ 'sidebar.open_to_job_description'|trans }}</p>
                                <div class="flex justify-center">
                                    <button 
                                        onclick="contact_modal.showModal()" 
                                        class="w-full px-4 py-2 bg-primary text-primary-content rounded-lg font-medium transition-all duration-300 hover:shadow-lg hover:shadow-primary/20 hover:-translate-y-0.5 active:translate-y-0 flex items-center justify-center gap-2 text-sm">
                                        <i class="fa-solid fa-briefcase"></i>
                                        {{ 'sidebar.lets_connect'|trans }}
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </header>

                <div class="mt-8">
                    <!-- Contact Modal -->
                    <dialog id="contact_modal" class="modal modal-bottom sm:modal-middle">
                        <div class="modal-box bg-base-200/80 backdrop-blur-lg border border-base-content/10">
                            <div class="relative">
                                <!-- Decorative elements -->
                                <div class="absolute -top-2 -left-2 w-20 h-20 bg-primary/10 rounded-full blur-2xl"></div>
                                <div class="absolute -bottom-2 -right-2 w-20 h-20 bg-secondary/10 rounded-full blur-2xl"></div>
                                
                                <!-- Content -->
                                <div class="relative">
                                    <h3 class="font-bold text-2xl mb-6 bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent">{{ 'contact_form.title'|trans }}</h3>
                                    
                                    {% for message in app.flashes('success') %}
                                        <div class="alert alert-success mb-4">
                                            <i class="fa-solid fa-check"></i>
                                            <span>{{ message }}</span>
                                        </div>
                                    {% endfor %}
                                    
                                    {% for message in app.flashes('error') %}
                                        <div class="alert alert-error mb-4">
                                            <i class="fa-solid fa-circle-exclamation"></i>
                                            <span>{{ message }}</span>
                                        </div>
                                    {% endfor %}

                                    {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
                                        <div class="form-control">
                                            <label class="label">
                                                <span class="label-text font-medium text-base-content/70">{{ 'contact_form.name'|trans }}</span>
                                            </label>
                                            {{ form_widget(form.name) }}
                                            {{ form_errors(form.name) }}
                                        </div>
                                        <div class="form-control">
                                            <label class="label">
                                                <span class="label-text font-medium text-base-content/70">{{ 'contact_form.email'|trans }}</span>
                                            </label>
                                            {{ form_widget(form.email) }}
                                            {{ form_errors(form.email) }}
                                        </div>
                                        <div class="form-control">
                                            <label class="label">
                                                <span class="label-text font-medium text-base-content/70">{{ 'contact_form.message'|trans }}</span>
                                            </label>
                                            {{ form_widget(form.message) }}
                                            {{ form_errors(form.message) }}
                                        </div>
                                        
                                        <!-- Privacy Policy Consent -->
                                        <div class="form-control">
                                            <label class="label cursor-pointer justify-start gap-3">
                                                {{ form_widget(form.consent) }}
                                                <span class="label-text text-sm">
                                                    {{ 'contact_form.privacy_consent'|trans({'%privacy_url%': path('privacy_policy')})|raw }}
                                                </span>
                                            </label>
                                            {{ form_errors(form.consent) }}
                                        </div>

                                        <div class="modal-action">
                                            <button type="submit" class="btn btn-primary">
                                                <i class="fa-solid fa-paper-plane"></i>
                                                {{ 'contact_form.send'|trans }}
                                            </button>
                                            <button type="button" class="btn" onclick="contact_modal.close()">{{ 'contact_form.cancel'|trans }}</button>
                                        </div>
                                    {{ form_end(form) }}
                                </div>
                            </div>
                        </div>
                        <form method="dialog" class="modal-backdrop bg-base-200/50 backdrop-blur-sm">
                            <button>close</button>
                        </form>
                    </dialog>

                    <script>
                        function submitContactForm() {
                            const name = document.getElementById('contact-name').value;
                            const email = document.getElementById('contact-email').value;
                            const message = document.getElementById('contact-message').value;
                            const privacyConsent = document.getElementById('privacy-consent').checked;

                            if (!name || !email || !message || !privacyConsent) {
                                alert('Please fill in all fields and accept the privacy policy');
                                return;
                            }

                            // Here you can add your form submission logic
                            // For now, we'll just log to console and close the modal
                            console.log('Form submitted:', { name, email, message, privacyConsent });
                            contact_modal.close();
                            
                            // Reset form
                            document.getElementById('contactForm').reset();
                        }
                    </script>

                </div>

            </div>
        </div>

        <!-- Main Content -->
        <div class="w-full lg:w-3/5 lg:ml-auto p-6 lg:p-12 mt-6 lg:mt-0">
            <!-- About Section -->
            <section id="about" class="max-w-3xl mx-auto lg:mx-0">
                <h2 class="text-3xl lg:text-4xl font-bold mb-6 lg:mb-8">{{ 'sections.about'|trans }}</h2>
                <div class="space-y-6 text-base-content/80 text-lg">
                    <p>
                        {{ 'about.paragraph1'|trans({'%age%': age}) }}
                    </p>
                    <p>
                        {{ 'about.paragraph2'|trans }}
                    </p>
                </div>
            </section>

            <!-- Skills Section -->
            {% include 'components/_skills.html.twig' %}

            <!-- Experience Section -->
            {% include 'components/_experience.html.twig' %}

            <!-- Education Section -->
            {% include 'components/_education.html.twig' %}

            <!-- Projects Section -->
            {% include 'components/_projects.html.twig' %}

            <!-- Footer -->
            <footer class="mt-16 pb-8">
                <div class="flex flex-col sm:flex-row items-center justify-center gap-4 text-sm text-base-content/50">
                    <a href="{{ path('legal_notice') }}" class="hover:text-base-content transition-colors">
                        {{ 'footer.legal_notice'|trans }}
                    </a>
                    <span class="hidden sm:inline">•</span>
                    <a href="{{ path('privacy_policy') }}" class="hover:text-base-content transition-colors">
                        {{ 'footer.privacy_policy'|trans }}
                    </a>
                </div>
            </footer>
        </div>
    </div>
    
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        {% if app.flashes('reopen-modal')|length > 0 %}
            contact_modal.showModal();
        {% endif %}
    });
</script>
{% endblock %}
