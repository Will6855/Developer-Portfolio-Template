{% extends 'base.html.twig' %}

{% block body %}
<div class="min-h-screen bg-base-100 relative">
    <!-- Background elements -->
    <div class="fixed inset-0 bg-gradient-to-br from-primary/5 via-base-100 to-secondary/5"></div>
    <div class="fixed inset-0 bg-[radial-gradient(circle_at_30%_50%,rgba(79,70,229,0.05)_0%,transparent_50%)]"></div>
    <div class="fixed inset-0 bg-[radial-gradient(circle_at_70%_80%,rgba(236,72,153,0.05)_0%,transparent_50%)]"></div>
    
    <!-- Grid pattern -->
    <div class="fixed inset-0 opacity-30">
        <div class="absolute inset-0" style="background-image: linear-gradient(rgba(255,255,255,0.05) 1px, transparent 1px), linear-gradient(90deg, rgba(255,255,255,0.05) 1px, transparent 1px); background-size: 30px 30px;"></div>
    </div>

    <div class="relative z-10">
        <div class="container mx-auto px-4 py-12">
            <div class="max-w-3xl mx-auto">
                <h1 class="text-3xl font-bold mb-8">{{ 'footer.privacy_policy'|trans }}</h1>
                
                <div class="space-y-6 text-base-content/80">
                    <section>
                        <h2 class="text-xl font-semibold mb-4">{{ 'privacy_policy.data_collection.title'|trans }}</h2>
                        <p>{{ 'privacy_policy.data_collection.description'|trans }}</p>
                        <ul class="list-disc ml-6 mt-2">
                            <li>{{ 'privacy_policy.data_collection.fields.name'|trans }}</li>
                            <li>{{ 'privacy_policy.data_collection.fields.email'|trans }}</li>
                            <li>{{ 'privacy_policy.data_collection.fields.message'|trans }}</li>
                        </ul>
                    </section>

                    <section>
                        <h2 class="text-xl font-semibold mb-4">{{ 'privacy_policy.data_usage.title'|trans }}</h2>
                        <p>{{ 'privacy_policy.data_usage.description'|trans }}</p>
                    </section>

                    <section>
                        <h2 class="text-xl font-semibold mb-4">{{ 'privacy_policy.data_retention.title'|trans }}</h2>
                        <p>{{ 'privacy_policy.data_retention.description'|trans }}</p>
                    </section>

                    <section>
                        <h2 class="text-xl font-semibold mb-4">{{ 'privacy_policy.your_rights.title'|trans }}</h2>
                        <p>{{ 'privacy_policy.your_rights.description'|trans }}</p>
                    </section>

                    <section>
                        <h2 class="text-xl font-semibold mb-4">{{ 'privacy_policy.cookies.title'|trans }}</h2>
                        <p>{{ 'privacy_policy.cookies.description'|trans }}</p>
                    </section>

                    <section>
                        <h2 class="text-xl font-semibold mb-4">{{ 'privacy_policy.contact.title'|trans }}</h2>
                        <p>{{ 'privacy_policy.contact.description'|trans }}</p>
                    </section>
                </div>

                <div class="mt-8 text-center">
                    <a href="{{ path('home') }}" class="text-primary hover:underline">&larr; {{ 'common.back_to_home'|trans }}</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
