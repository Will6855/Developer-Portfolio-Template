{% extends 'base.html.twig' %}

{% block body %}
<div class="min-h-screen bg-base-100 relative">
    <!-- Background elements -->
    <div class="fixed inset-0 bg-gradient-to-br from-primary/5 via-base-100 to-secondary/5"></div>
    <div class="fixed inset-0 bg-[radial-gradient(circle_at_30%_50%,rgba(79,70,229,0.05)_0%,transparent_50%)]"></div>
    <div class="fixed inset-0 bg-[radial-gradient(circle_at_70%_80%,rgba(236,72,153,0.05)_0%,transparent_50%)]"></div>
    
    <!-- Grid pattern -->
    <div class="fixed inset-0 opacity-30">
        <div class="absolute inset-0" style="background-image: linear-gradient(rgba(255,255,255,0.05) 1px, transparent 1px), linear-gradient(90deg, rgba(255,255,255,0.05) 1px, transparent 1px); background-size: 30px 30px;"></div>
    </div>

    <div class="relative z-10">
        <div class="container mx-auto px-4 py-12">
            <div class="max-w-3xl mx-auto">
                <h1 class="text-3xl font-bold mb-8">{{ 'footer.legal_notice'|trans }}</h1>
                
                <div class="space-y-6 text-base-content/80">
                    <section>
                        <h2 class="text-xl font-semibold mb-4">{{ 'legal_notice.editor.title'|trans }}</h2>
                        <p>{{ 'legal_notice.editor.edited_by'|trans }}</p>
                        <p>{{ 'legal_notice.editor.contact'|trans }} : gpiard27@gmail.com</p>
                    </section>

                    <section>
                        <h2 class="text-xl font-semibold mb-4">{{ 'legal_notice.hosting.title'|trans }}</h2>
                        <p>{{ 'legal_notice.hosting.hosted_by'|trans }} :</p>
                        <p>OVH</p>
                        <p>{{ 'legal_notice.hosting.company_info'|trans({'capital': '10 174 560 €'}) }}</p>
                        <p>RCS Lille Métropole 424 761 419 00045</p>
                        <p>{{ 'legal_notice.hosting.ape'|trans }} 2620Z</p>
                        <p>{{ 'legal_notice.hosting.vat'|trans }} : FR 22 424 761 419</p>
                        <p>{{ 'legal_notice.hosting.address'|trans }}</p>
                        <p>{{ 'legal_notice.hosting.phone'|trans }} : 1007</p>
                    </section>

                    <section>
                        <h2 class="text-xl font-semibold mb-4">{{ 'legal_notice.intellectual_property.title'|trans }}</h2>
                        <p>{{ 'legal_notice.intellectual_property.content'|trans }}</p>
                    </section>

                    <section>
                        <h2 class="text-xl font-semibold mb-4">{{ 'legal_notice.links.title'|trans }}</h2>
                        <p>{{ 'legal_notice.links.content'|trans }}</p>
                    </section>
                </div>

                <div class="mt-8 text-center">
                    <a href="{{ path('home') }}" class="text-primary hover:underline">&larr; {{ 'common.back_to_home'|trans }}</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
