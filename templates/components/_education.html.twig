<section id="education" class="max-w-3xl mx-auto lg:mx-0">
    {# <h2 class="text-3xl lg:text-4xl font-bold mb-6 lg:mb-8">{{ 'sections.education'|trans }}</h2> #}
    <div class="relative space-y-8">
        <!-- Vertical Line -->
        <div class="absolute left-2 top-2 bottom-2 w-0.5 bg-base-300"></div>

        {% for education in educations %}
            <div class="relative pl-8">
                <!-- Timeline Dot -->
                <div class="absolute left-[9px] top-6 w-3 h-3 -translate-x-1/2 rounded-full bg-primary border-2 border-base-100"></div>
                
                <!-- Content -->
                <div class="space-y-4">
                    <!-- Header -->
                    <div class="flex flex-col sm:flex-row items-start gap-4">
                        <div class="shrink-0 w-16 sm:w-12 h-16 sm:h-12 rounded-xl bg-base-300/50 p-2 flex items-center justify-center">
                            <img src="{{ asset('images/' ~ education.logo) }}" alt="{{ education.school }} Logo" class="w-full h-full object-contain">
                        </div>
                        <div>
                            <div class="flex flex-wrap items-center gap-x-2 gap-y-1">
                                <h3 class="text-xl font-bold" data-trans="{{ education.degree }}">{{ education.degree|trans }}</h3>
                                <span class="text-base-content/70" data-trans="education.at_education">{{ 'education.at_education'|trans }}</span>
                                <span class="font-semibold">{{ education.school }}</span>
                            </div>
                            <div class="flex flex-wrap gap-4 text-sm text-base-content/70 mt-1">
                                <div class="flex items-center gap-1">
                                    <i class="fa-solid fa-location-dot"></i>
                                    <span data-trans="{{ education.location }}">{{ education.location|trans }}</span>
                                </div>
                                <div class="flex items-center gap-1">
                                    <i class="fa-regular fa-calendar"></i>
                                    <span data-trans="{{ education.period }}">{{ education.period|trans }}</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Description -->
                    <div class="space-y-2 text-base-content/70">
                        <ul class="list-none p-0 m-0 space-y-1">
                            {% for item in education.description %}
                                <li data-trans="{{ item }}">{{ item|trans }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</section>
