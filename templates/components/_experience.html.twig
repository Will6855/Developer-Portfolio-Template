<section id="experience" class="max-w-3xl mx-auto lg:mx-0">
    {# <h2 class="text-3xl lg:text-4xl font-bold mb-6 lg:mb-8">{{ 'sections.experiences'|trans }}</h2> #}
    <div class="relative space-y-8">
        <!-- Vertical Line -->
        <div class="absolute left-1 top-2 bottom-2 w-0.5 bg-base-300"></div>

        {% for experience in experiences %}
            <!-- Experience Item -->
            <div class="relative pl-8">
                <!-- Timeline Dot -->
                <div class="absolute left-1 top-6 w-3 h-3 -translate-x-1/2 rounded-full bg-primary border-2 border-base-100"></div>
                
                <!-- Content -->
                <div class="space-y-4">
                    <!-- Header -->
                    <div class="flex flex-col sm:flex-row items-start gap-4">
                        <div class="shrink-0 w-16 sm:w-12 h-16 sm:h-12 rounded-xl bg-base-300/50 p-2 flex items-center justify-center">
                            <img src="{{ asset('images/' ~ experience.logo) }}" alt="{{ experience.company }} Logo" class="w-full h-full object-contain">
                        </div>
                        <div>
                            <div class="flex flex-wrap items-center gap-x-2 gap-y-1">
                                <h3 class="text-xl font-bold">{{ experience.title }}</h3>
                                <span class="text-base-content/70">{{ 'sidebar.at_experience'|trans }}</span>
                                <span class="font-semibold">{{ experience.company }}</span>
                            </div>
                            <div class="flex flex-wrap gap-4 text-sm text-base-content/70 mt-1">
                                <div class="flex items-center gap-1">
                                    <i class="fa-solid fa-location-dot"></i>
                                    <span>{{ experience.location }}</span>
                                </div>
                                <div class="flex items-center gap-1">
                                    <i class="fa-regular fa-calendar"></i>
                                    <span>{{ experience.period }}</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Description -->
                    <div class="space-y-2 text-base-content/70">
                        {% for item in experience.description %}
                            <p>{{ item }}</p>
                        {% endfor %}
                    </div>

                    <!-- Technologies -->
                    <div class="flex flex-wrap gap-2">
                        {% for tech in experience.technologies %}
                            <div class="badge badge-md gap-2 px-2 py-2 bg-{{ tech.color_bg }} text-{{ tech.color_text }} hover:bg-{{ tech.color_hover }} transition-colors border-none">
                                {% if tech.icon is defined %}
                                    <i class="{{ tech.icon }} mr-1"></i>
                                {% else %}
                                    <img src="{{ asset('images/' ~ tech.image) }}" alt="{{ tech.name }}" class="w-3 h-3 mr-1">
                                {% endif %}
                                {{ tech.name }}
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</section>
