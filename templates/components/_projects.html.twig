<section id="projects" class="mt-12 lg:mt-16 max-w-3xl mx-auto lg:mx-0">
    <h2 class="text-3xl lg:text-4xl font-bold mb-6 lg:mb-8">{{ 'sections.projects'|trans }}</h2>
    
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        {% for project in projects %}
            <div class="group relative overflow-hidden rounded-xl shadow-md hover:shadow-lg transition-all duration-500 
                        flex flex-col bg-gradient-to-br from-primary/20 to-base-300/90 border border-base-content/10">
                <!-- Background Image -->
                <div class="absolute inset-0 z-0 opacity-20 group-hover:opacity-25 transition-opacity duration-300">
                    <img src="{{ asset('images/' ~ project.image) }}" 
                         alt="{{ project.title }}" 
                         class="w-full h-full object-cover">
                </div>

                <!-- Content Wrapper -->
                <div class="relative z-10 flex flex-col flex-grow p-3">
                    <!-- Project Title -->
                    <h3 class="text-lg font-bold mb-2 w-fit bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent">
                        {{ project.title }}
                    </h3>

                    <!-- Description -->
                    <p class="text-sm leading-tight mb-3">{{ project.description }}</p>

                    <!-- Spacer to push badges and links to bottom -->
                    <div class="flex-grow"></div>

                    <!-- Technologies -->
                    <div class="flex flex-wrap gap-1 mt-2 mb-2">
                        {% for tech in project.technologies %}
                            <div class="badge badge-md gap-1 px-1.5 py-1 
                                        bg-{{ tech.color_bg }} text-{{ tech.color_text }} 
                                        hover:bg-{{ tech.color_hover }} transition-colors border-none">
                                {% if tech.icon is defined %}
                                    <i class="{{ tech.icon }} mr-0.5 text-xs"></i>
                                {% else %}
                                    <img src="{{ asset('images/' ~ tech.image) }}" alt="{{ tech.name }}" class="w-2.5 h-2.5 mr-0.5">
                                {% endif %}
                                {{ tech.name }}
                            </div>
                        {% endfor %}
                    </div>

                    <!-- Links -->
                    <div class="flex flex-wrap gap-1.5">
                        {% if project.github %}
                            <a href="{{ project.github }}" target="_blank" rel="noopener noreferrer" 
                               class="btn btn-xs gap-1.5 bg-base-content/5 hover:bg-base-content/10 text-base-content border-0 transition-all duration-300">
                                <i class="fa-brands fa-github"></i>
                                <span class="text-[10px]">{{ 'projects.links.view_code'|trans }}</span>
                            </a>
                        {% endif %}
                        {% if project.website %}
                            <a href="{{ project.website }}" target="_blank" rel="noopener noreferrer" 
                               class="btn btn-xs gap-1.5 bg-primary/10 hover:bg-primary/20 text-primary border-0 transition-all duration-300">
                                <i class="fa-solid fa-globe"></i>
                                <span class="text-[10px]">{{ 'projects.links.visit_website'|trans }}</span>
                            </a>
                        {% endif %}
                        {% if project.demo %}
                            <a href="{{ project.demo }}" target="_blank" rel="noopener noreferrer" 
                               class="btn btn-xs gap-1.5 bg-gradient-to-r from-primary to-secondary text-primary-content border-0 transition-all duration-300">
                                <i class="fa-solid fa-arrow-up-right-from-square"></i>
                                <span class="text-[10px]">{{ 'projects.links.live_demo'|trans }}</span>
                            </a>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</section>
